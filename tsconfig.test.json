{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "types": [
            "vitest",
            "jsdom"
        ],
        "moduleResolution": "bundler"
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "**/*.test.ts",
        "**/*.test.tsx",
        "**/*.spec.ts",
        "**/*.spec.tsx",
        "./test-setup.ts",
        "./vitest.d.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}