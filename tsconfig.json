{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2020",
    "lib": [
      "ES2020",
      "dom"
    ],
    "sourceMap": true,
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "dist",
    "types": [
      "vitest/globals",
      "@testing-library/jest-dom",
      "node"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./src"
    ],
    "paths": {
      "@assets/*": [
        "node_modules/@patternfly/react-core/dist/styles/assets/*"
      ],
      "@/*": [
        "src/*"
      ],
      "@S/*": [
        "src/Slices/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.jsx",
    "cypress/support/e2e.js",
    "./test-setup.ts",
    "./vitest.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "ESNext",
      "target": "ES2020",
      "esModuleInterop": true,
      "types": [
        "cypress-file-upload",
        "vitest",
        "jsdom"
      ]
    }
  }
}